<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <arg name="world" default="empty"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="verbose" default="false"/>
  <arg name="physics" default="ode"/>
  <arg name="world_name" default="default.world"/>

  <!-- Husky Params -->
  <arg name="husky_x" default="310"/>
  <arg name="husky_y" default="-275"/>
  <arg name="husky_z" default="0.5"/>
  <arg name="husky_yaw" default="0.0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find ow_dynamic_terrain)/worlds/$(arg world_name)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="verbose" value="$(arg verbose)" />
    <arg name="debug" value="$(arg debug)"/>
    <arg name="physics" value="$(arg physics)"/>
  </include>

  <include file="$(find husky_gazebo)/launch/spawn_husky.launch">
    <arg name="x" default="$(arg husky_x)"/>
    <arg name="y" default="$(arg husky_y)"/>
    <arg name="z" default="$(arg husky_z)"/>
    <arg name="yaw" default="$(arg husky_yaw)"/>
    <arg name="laser_enabled" value="false"/>
    <arg name="kinect_enabled" value="true"/>
  </include>

  <!-- Show in Rviz   -->
  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ow_dynamic_terrain)/launch/husky.rviz"/> -->

</launch>
